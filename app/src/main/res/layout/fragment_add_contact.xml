<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andy.nessus_fenrir_callirrhoe.AddContactFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/ctext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Add contacts"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignTop="@+id/addbtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/addbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:text="Add"
        android:layout_below="@+id/grpbtn"
        android:layout_toRightOf="@+id/ntext"
        android:layout_toEndOf="@+id/ntext"
        android:layout_marginTop="14dp" />

    <EditText
        android:id="@+id/ntext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Group Name"
        android:inputType="textPersonName"
        android:layout_marginTop="125dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/ctext"
        android:layout_alignStart="@+id/ctext" />

    <TextView
        android:id="@+id/viewgrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crtebtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/grpbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_alignBottom="@+id/ntext"
        android:layout_alignLeft="@+id/addbtn"
        android:layout_alignStart="@+id/addbtn" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:longClickable="true"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/viewgrp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/crtebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create"
        android:layout_below="@+id/addbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />


</RelativeLayout>
